{
  "identifier": "desktop-capability",
  "description": "桌面应用权限",
  "local": true,
  "platforms": [
    "windows"
  ],
  "windows": [
    "tdesign-template",
    "tdesign-template-*"
  ],
  "remote": {
    "urls": [
      "https://*.lifebus.top",
      "https://*.lifebus.fun"
    ]
  },
  "permissions": [
    "core:window:allow-start-dragging",
    "core:window:allow-center",
    "core:window:allow-create",
    "core:window:allow-close",
    "core:window:allow-hide",
    "core:window:allow-show",
    "core:window:allow-destroy",
    "core:window:allow-minimize",
    "core:window:allow-title",
    "core:webview:allow-create-webview",
    "core:webview:allow-create-webview-window",
    "core:webview:allow-webview-show",
    "core:webview:allow-webview-hide",
    "core:webview:allow-clear-all-browsing-data",
    "window-state:default",
    "autostart:default",
    "deep-link:default",
    "clipboard-manager:allow-clear",
    "clipboard-manager:allow-read-image",
    "clipboard-manager:allow-read-text",
    "clipboard-manager:allow-write-html",
    "clipboard-manager:allow-write-image",
    "clipboard-manager:allow-write-text",
    "dialog:default",
    "dialog:allow-message",
    "notification:default",
    "notification:allow-request-permission",
    "store:default",
    "store:allow-get-store",
    "store:allow-get",
    "store:allow-set",
    "store:allow-save",
    "store:allow-load",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "cmd": "",
          "name": "binaries/LocalSend",
          "sidecar": true
        }
      ]
    },
    "shell:allow-spawn",
    "shell:allow-open",
    "shell:allow-kill",
    "fs:default",
    "fs:allow-app-read-recursive",
    "fs:allow-app-write-recursive",
    "fs:scope-app-recursive",
    "fs:allow-appconfig-read-recursive",
    "fs:allow-appconfig-write-recursive",
    "fs:scope-appconfig-recursive",
    "fs:allow-appcache-write-recursive",
    "fs:allow-applog-write-recursive",
    "fs:scope-applog-recursive",
    "fs:allow-desktop-read",
    "fs:allow-desktop-write",
    "fs:allow-document-read",
    "fs:allow-download-read",
    "fs:allow-exe-read-recursive",
    "fs:scope-exe-recursive",
    "process:default",
    "process:allow-restart"
  ]
}
{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "tdesign-template",
  "version": "1.0.0",
  "identifier": "top.lifebus.tauri",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:9586",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "TDesign Template",
        "width": 1200,
        "height": 800,
        "center": true,
        "resizable": true,
        "fullscreen": false,
        "browserExtensionsEnabled": false,
        "label": "tdesign-template",
        "windowClassname": "TDesign",
        "dragDropEnabled": false,
        "devtools": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "externalBin": [
      "binaries/ammds"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "icons/*",
      "html/*"
    ],
    "windows": {
      "nsis": {
        "displayLanguageSelector": true,
        "installerIcon": "icons/icon.ico",
        "installMode": "both",
        "languages": [
          "SimpChinese",
          "TradChinese",
          "English",
          "Japanese"
        ],
        "startMenuFolder": "TDesign Template"
      }
    }
  }
}